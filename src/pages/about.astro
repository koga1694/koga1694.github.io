<style>
  .about-page {
    max-width: 800px;
    margin: 0 auto;
  }

  .page-header {
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--color-border);
  }

  .page-header h1 {
    font-size: 2rem;
    font-weight: 800;
  }

  .about-content {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .intro {
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  .avatar {
    flex-shrink: 0;
  }

  .avatar-placeholder {
    width: 120px;
    height: 120px;
    background-color: var(--color-bg-secondary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 3rem;
    border: 3px solid var(--color-border);
  }

  .intro-text h2 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 0.75rem;
  }

  .intro-text p {
    color: var(--color-text-secondary);
    line-height: 1.7;
  }

  .skills h3,
  .contact h3 {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--color-border);
  }

  .skill-categories {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    gap: 1.5rem;
  }

  .skill-category {
    background-color: var(--color-bg-secondary);
    padding: 1.25rem;
    border-radius: 0.75rem;
    border: 1px solid var(--color-border);
  }

  .skill-category h4 {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
  }

  .skill-category ul {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .skill-category li {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
  }

  .contact-links {
    list-style: none;
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
  }

  .contact-links a {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text-secondary);
    font-size: 0.9375rem;
    padding: 0.75rem 1rem;
    background-color: var(--color-bg-secondary);
    border-radius: 0.5rem;
    border: 1px solid var(--color-border);
    transition: all 0.2s ease;
  }

  .contact-links a:hover {
    color: var(--color-accent);
    border-color: var(--color-accent);
  }

  @media (max-width: 768px) {
    .intro {
      flex-direction: column;
      text-align: center;
    }
  }
</style>
