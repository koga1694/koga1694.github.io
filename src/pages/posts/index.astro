---
import MainLayout from '../../layouts/MainLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('posts', ({ data }) => !data.draft))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const categories = [...new Set(posts.map((post) => post.data.category))];
const tags = [...new Set(posts.flatMap((post) => post.data.tags))].slice(0, 20);
---

<MainLayout title="Posts | MLOps Blog" description="기술 포스트, 트러블슈팅, AI/ML 뉴스">
  <div class="posts-page">
    <header class="page-header">
      <h1>All Posts</h1>
      <p>기술 포스트, 트러블슈팅, AI/ML 뉴스를 모아봅니다.</p>
    </header>

    <div class="filters">
      <div class="filter-group">
        <h3>Categories</h3>
        <div class="filter-buttons">
          <button class="filter-btn active" data-category="all">All</button>
          {categories.map((cat) => (
            <button class="filter-btn" data-category={cat}>
              {cat}
            </button>
          ))}
        </div>
      </div>
    </div>

    <div class="posts-list">
      {posts.map((post) => (
        <article class="post-item" data-category={post.data.category}>
          <div class="post-date">
            <span class="day">{post.data.pubDate.getDate()}</span>
            <span class="month">{post.data.pubDate.toLocaleDateString('en-US', { month: 'short' })}</span>
            <span class="year">{post.data.pubDate.getFullYear()}</span>
          </div>
          <div class="post-content">
            <div class="post-meta">
              <span class="category">{post.data.category}</span>
            </div>
            <h2 class="post-title">
              <a href={`/posts/${post.slug}`}>{post.data.title}</a>
            </h2>
            <p class="post-description">{post.data.description}</p>
            <div class="post-tags">
              {post.data.tags.slice(0, 4).map((tag) => (
                <span class="tag">{tag}</span>
              ))}
            </div>
          </div>
        </article>
      ))}
    </div>

    {posts.length === 0 && (
      <div class="empty-state">
        <p>아직 포스트가 없습니다. 첫 번째 글을 작성해보세요!</p>
      </div>
    )}
  </div>
</MainLayout>

<style>
  .posts-page {
    max-width: 900px;
    margin: 0 auto;
  }

  .page-header {
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--color-border);
  }

  .page-header h1 {
    font-size: 2rem;
    font-weight: 800;
    margin-bottom: 0.5rem;
  }

  .page-header p {
    color: var(--color-text-secondary);
  }

  .filters {
    margin-bottom: 2rem;
  }

  .filter-group h3 {
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    color: var(--color-text-secondary);
  }

  .filter-buttons {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .filter-btn {
    background-color: var(--color-bg-secondary);
    color: var(--color-text-secondary);
    border: 1px solid var(--color-border);
    padding: 0.375rem 0.75rem;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    cursor: pointer;
    transition: all 0.2s ease;
    text-transform: capitalize;
  }

  .filter-btn:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
  }

  .filter-btn.active {
    background-color: var(--color-accent);
    color: white;
    border-color: var(--color-accent);
  }

  .posts-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .post-item {
    display: flex;
    gap: 1.5rem;
    padding: 1.5rem;
    background-color: var(--color-bg-secondary);
    border-radius: 0.75rem;
    border: 1px solid var(--color-border);
    transition: border-color 0.2s ease;
  }

  .post-item:hover {
    border-color: var(--color-accent);
  }

  .post-item.hidden {
    display: none;
  }

  .post-date {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 60px;
    padding-right: 1.5rem;
    border-right: 1px solid var(--color-border);
  }

  .post-date .day {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-accent);
    line-height: 1;
  }

  .post-date .month {
    font-size: 0.75rem;
    text-transform: uppercase;
    color: var(--color-text-secondary);
  }

  .post-date .year {
    font-size: 0.75rem;
    color: var(--color-text-secondary);
  }

  .post-content {
    flex: 1;
  }

  .post-meta {
    margin-bottom: 0.5rem;
  }

  .category {
    font-size: 0.75rem;
    text-transform: uppercase;
    color: var(--color-accent);
    font-weight: 600;
  }

  .post-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    line-height: 1.3;
  }

  .post-title a {
    color: var(--color-text);
  }

  .post-title a:hover {
    color: var(--color-accent);
  }

  .post-description {
    color: var(--color-text-secondary);
    font-size: 0.9375rem;
    margin-bottom: 0.75rem;
    line-height: 1.6;
  }

  .post-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    background-color: var(--color-bg);
    color: var(--color-text-secondary);
    padding: 0.125rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.75rem;
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    color: var(--color-text-secondary);
  }

  @media (max-width: 768px) {
    .post-item {
      flex-direction: column;
    }

    .post-date {
      flex-direction: row;
      gap: 0.5rem;
      border-right: none;
      border-bottom: 1px solid var(--color-border);
      padding-right: 0;
      padding-bottom: 1rem;
    }
  }
</style>

<script>
  const filterBtns = document.querySelectorAll('.filter-btn');
  const postItems = document.querySelectorAll('.post-item');

  filterBtns.forEach((btn) => {
    btn.addEventListener('click', () => {
      const category = btn.getAttribute('data-category');

      filterBtns.forEach((b) => b.classList.remove('active'));
      btn.classList.add('active');

      postItems.forEach((item) => {
        if (category === 'all' || item.getAttribute('data-category') === category) {
          item.classList.remove('hidden');
        } else {
          item.classList.add('hidden');
        }
      });
    });
  });
</script>
