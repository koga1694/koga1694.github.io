---
import { SITE_CONFIG } from '../../config';
import Nav from './Nav.astro';
import ThemeToggle from './ThemeToggle.astro';
---

<header class="sticky top-0 z-50 w-full border-b bg-white/95 dark:bg-gray-900/95 backdrop-blur supports-[backdrop-filter]:bg-white/60 dark:supports-[backdrop-filter]:bg-gray-900/60">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <!-- Logo / Site Title -->
      <div class="flex items-center">
        <a href="/" class="flex items-center space-x-2">
          <span class="text-xl font-bold text-gray-900 dark:text-gray-100">
            {SITE_CONFIG.author}
          </span>
        </a>
      </div>

      <!-- Navigation -->
      <div class="hidden md:flex items-center gap-8">
        <Nav />
        <ThemeToggle />
      </div>

      <!-- Mobile menu button + theme toggle -->
      <div class="flex md:hidden items-center gap-4">
        <ThemeToggle />
        <button
          id="mobile-menu-button"
          aria-label="Toggle menu"
          class="p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800"
        >
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <nav class="flex flex-col gap-4">
        <a href="/" class="text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">Home</a>
        <a href="/blog" class="text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">Blog</a>
        <a href="/projects" class="text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">Projects</a>
        <a href="/about" class="text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">About</a>
      </nav>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
